<div class="content-heading">
  <div *ngIf="item">{{(item.id ? 'EDIT' : 'NEW') | translate }} {{'<%=(name).toUpperCase()%>' | translate}} </div>
</div>

<div class="card">
  <div class="content card-body">
    <form *ngIf="item" #editForm="ngForm" (ngSubmit)="save(editForm)">


      <% for (let field of modelFields) { %>
        <%if (field.name.toLowerCase() != 'id' ){ %>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="<%=field.name%>">{{'<%=field.name.toUpperCase() %>' | translate }}</label>

                <%if (field.relation  != null && field.relation == "MANY_TO_ONE"){ %>
                    <ng-select
                            [items]="<%=pluralize(field.name)%>"
                            [(ngModel)]="item.<%=(field.name)%>"
                            id="<%=field.name%>"
                            name="<%=field.name%>"
                            required
                            #<%=field.name%>="ngModel"
                            [bindLabel]="'name'"
                    >
                    </ng-select>
                    <%} else if (field.type.toLowerCase() === 'date' ){ %>
                    <input required bsDatepicker #<%=field.name%>="ngModel" type="text" [(ngModel)]="item.<%=field.name%>" id="<%=field.name%>" name="<%=field.name%>" class="form-control">
                <% } else if (field.type === 'number'){ %><input  #<%=field.name%>="ngModel" required type="number" [(ngModel)]="item.<%=field.name%>" id="<%=field.name%>" name="<%=field.name%>" class="form-control"><% } else if (!field.readonly) { %><input  #<%=field.name%>="ngModel" required [(ngModel)]="item.<%=field.name%>" id="<%=field.name%>" name="<%=field.name%>" class="form-control"><% } %>

        </div>
            <small class="text-danger" role="alert"
                   [hidden]="<%=field.name%>.valid || <%=field.name%>.pristine">
              {{'REQUIRED_FIELD' | translate}}
            </small>

        </div>
      </div>
      <% } %>
      <% } %>




        <% for (let field of modelFields) { %>
        <%if (field.relation  != null && field.relation != "MANY_TO_ONE"){ %>
        <div class="row">
            <div class="col-md-6">

                <div class="card b">
                    <div class="card-header"><h5>{{'<%=pluralize(field.name.toUpperCase()) %>' | translate }} <span class="required-asterisk">*</span></h5></div>
                    <div class="card-body">
                    <%if (field.relation != null) {%>

                        <% if  (field.relation == "ONE_TO_MANY" || field.relation == "MANY_TO_MANY")  {%>

                        <!-- INIT -->
                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-check-label">{{ '<%=field.name.toUpperCase() %>' | translate }}
                                    </label>

                                    <ng-select
                                            [items]="<%=pluralize(field.name)%>"
                                            [(ngModel)]="temp<%=classify(field.name)%>"
                                            id="<%=field.name%>"
                                            name="<%=field.name%>"
                                            #<%=field.name%>="ngModel"
                                            [bindLabel]="'name'"

                                    >
                                    </ng-select>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <button class="btn btn-flat btn-outline-info mt-25" [disabled]="<%=pluralize(field.name)%> && <%=pluralize(field.name)%>.length == 0" (click)="add<%= field.type %>($event)">
                                    {{ "ADD" | translate }}
                                </button>
                            </div>
                        </div>
                        <!-- FIM -->

                        <!-- TABELA  -->
                        <div class="row" *ngIf="item.<%=pluralize(field.name)%>.length > 0">
                            <div class="col-md-6">
                                <table class="table table-striped">
                                    <thead>
                                    <th>
                                        {{'NAME' | translate}}
                                    </th>
                                    <th width="5%">
                                        {{'ACTION' | translate}}
                                    </th>
                                    </thead>
                                    <tr *ngFor="let <%=(field.name)%> of item.<%=pluralize(field.name)%>">
                                        <td>{{<%=(field.name)%>.name}}</td>
                                        <td>
                                            <i
                                                    class="fa fa-trash action_button"
                                                    [title]="'DELETE' | translate"
                                                    id="delete"
                                                    (click)="remove<%= field.type %>(<%=(field.name)%>)"
                                            ></i>
                                        </td>
                                    </tr>

                                </table>
                            </div>
                        </div>
                        <!-- END TABLE -->




                        <% } %>

                    <% } %>
                </div>
                </div>
            </div>
        </div>
        <% } %>
        <% } %>


        <button type="submit" class="btn btn-success" [disabled]="!editForm.form.valid">
        {{(item.id ? 'SAVE_CHANGES' : 'SAVE') | translate }}
      </button>
      <button type="button" class="btn btn-light ml-1" (click)="cancel()">{{'CANCEL' | translate }}</button>

    </form>
  </div>
</div>
